<Application x:Class="laba6_7.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:laba6_7"
             xmlns:util="clr-namespace:laba6_7.templates"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
         <FontFamily x:Key="Merriweather">
            ./font/Merriweather-Regular.ttf #Merriweather
        </FontFamily>           
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./templates/Templates.xaml" />
                <ResourceDictionary Source="./templates/Items.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
